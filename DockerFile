# Stage 1: Build the project
FROM maven:3.9.11-openjdk-17 AS build

# Set working directory
WORKDIR /app

# Copy all project files
COPY . .

# Build the Spring Boot app (skip tests)
RUN mvn clean package -DskipTests

# Stage 2: Runtime image (lightweight)
FROM openjdk:17-jdk-slim

# Set working directory
WORKDIR /app

# Expose the port (Render will override $PORT)
ENV PORT=8081
EXPOSE 8081

# Copy the built JAR from the build stage
COPY --from=build /app/target/Musify-0.0.1-SNAPSHOT.jar /app/Musify-0.0.1-SNAPSHOT.jar

# Run the Spring Boot application
ENTRYPOINT ["java", "-jar", "/app/Musify-0.0.1-SNAPSHOT.jar"]
